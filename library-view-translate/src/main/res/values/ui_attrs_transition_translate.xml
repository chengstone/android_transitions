<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Translate transition attributes. -->
	<declare-styleable name="Ui.Transition.Translate">
		<!--
			Delta by which to move, in or out, absolutely or relatively, the target view in the scene
			along X axis. This may be either a fixed/absolute value specified in pixels or as dimension
			or a relative/fraction value determining how much should be the view moved relative to
			its size (width) or relative to the size (width) of the root scene.

			Samples:
			========================================================================================
			1) Absolute:
			   - uiTranslationXDelta="24px"
			   - uiTranslationXDelta="24dp"

			2) Relative to TARGET:
			   - uiTranslationXDelta="50%"

			3) Relative to parent SCENE:
			   - uiTranslationXDelta="25%p"
			========================================================================================
		-->
		<attr name="uiTranslationXDelta" format="dimension|float|fraction"/>
		<!--
			Delta by which to move, in or out, absolutely or relatively, the target view in the scene
			along Y axis. This may be either a fixed/absolute value specified in pixels or as dimension
			or a relative/fraction value determining how much should be the view moved relative to
			its size (height) or relative to the size (height) of the root scene.

			Samples:
			========================================================================================
			1) Absolute:
			   - uiTranslationYDelta="24px"
			   - uiTranslationYDelta="24dp"

			2) Relative to TARGET:
			   - uiTranslationYDelta="50%"

			3) Relative to parent SCENE:
			   - uiTranslationYDelta="25%p"
			========================================================================================
		-->
		<attr name="uiTranslationYDelta" format="dimension|float|fraction"/>
	</declare-styleable>
</resources>