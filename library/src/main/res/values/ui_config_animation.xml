	<!-- Duration of animation for a new incoming window. -->
	<integer name="ui_config_anim_window_in_duration">400</integer>
	<!-- Duration of animation for an old incoming back-stacked window. -->
	<integer name="ui_config_anim_window_in_back_duration">300</integer>
	<!-- Duration of animation for the currently outgoing window (new is incoming). -->
	<integer name="ui_config_anim_window_out_duration">400</integer>
	<!-- Duration of animation for the currently outgoing window (back-stacked is incoming). -->
	<integer name="ui_config_anim_window_out_back_duration">300</integer>

	<!-- ### SLIDE ============================================================================= -->

	<!-- Duration of slide animation for a new incoming window. -->
	<integer name="ui_config_anim_window_slide_in_duration">@integer/ui_config_anim_window_in_duration</integer>
	<!-- Duration of slide animation for an old incoming back-stacked window. -->
	<integer name="ui_config_anim_window_slide_in_back_duration">@integer/ui_config_anim_window_in_back_duration</integer>
	<!-- Duration of slide animation for the currently outgoing window (new is incoming). -->
	<integer name="ui_config_anim_window_slide_out_duration">@integer/ui_config_anim_window_out_duration</integer>
