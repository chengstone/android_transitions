	<integer name="ui_config_anim_window_slide_out_back_duration">@integer/ui_config_anim_window_out_back_duration</integer>

	<!-- ### SCALE ============================================================================= -->

	<!-- Duration of scale animation for a new incoming window. -->
	<integer name="ui_config_anim_window_scale_in_duration">@integer/ui_config_anim_window_in_duration</integer>
	<!-- Start offset of scale animation for a new incoming window. -->
	<integer name="ui_config_anim_window_scale_in_delay">150</integer>
	<!-- Duration of scale animation for an old incoming back-stacked window. -->
	<integer name="ui_config_anim_window_scale_in_back_duration">@integer/ui_config_anim_window_in_back_duration</integer>
