	<integer name="ui_config_anim_window_scale_out_duration">@integer/ui_config_anim_window_out_duration</integer>
	<!-- Duration of scale animation for the currently outgoing window (back-stacked is incoming). -->
	<integer name="ui_config_anim_window_scale_out_back_duration">@integer/ui_config_anim_window_slide_out_back_duration</integer>

