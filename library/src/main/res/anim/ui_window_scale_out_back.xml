<set xmlns:android="http://schemas.android.com/apk/res/android"
	 android:interpolator="@anim/ui_window_interpolator"
	 android:zAdjustment="top">

	<alpha
		android:duration="@integer/ui_config_anim_window_fade_out_back_duration"
		android:fromAlpha="1.0"
		android:toAlpha="0.5" />

	<scale
		android:duration="@integer/ui_config_anim_window_scale_out_back_duration"
		android:fromXScale="1.0"
		android:fromYScale="1.0"
		android:pivotX="50%"
		android:pivotY="50%"
		android:toXScale="0.9"
		android:toYScale="0.9" />
</set>