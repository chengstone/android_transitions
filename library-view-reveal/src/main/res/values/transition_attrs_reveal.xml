<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Reveal transition attributes. -->
	<declare-styleable name="Transition.Reveal">
		<!-- Mode determining whether a view should be revealed or concealed. -->
		<attr name="transitionRevealMode">
			<enum name="reveal" value="0x01" />
			<enum name="conceal" value="0x02" />
		</attr>
		<!-- Radius of the target view at transition's start. -->
		<attr name="transitionStartRadius" format="dimension" />
		<!-- Radius of the target view at transition's end. -->
		<attr name="transitionEndRadius" format="dimension" />
		<!-- Re-used. -->
		<attr name="transitionCenterGravity" />
		<!-- Re-used. -->
		<attr name="transitionCenterHorizontalOffset" />
		<!-- Re-used. -->
		<attr name="transitionCenterVerticalOffset" />
		<!-- Re-used. -->
		<attr name="android:centerX" />
		<!-- Re-used. -->
		<attr name="android:centerY" />
		<!-- Re-used. -->
		<attr name="transitionAppearVisibility" />
		<!-- Re-used. -->
		<attr name="transitionDisappearVisibility" />
		<!-- Re-used. -->
		<attr name="transitionStartVisibility" />
		<!-- Re-used. -->
		<attr name="transitionEndVisibility" />
	</declare-styleable>
</resources>