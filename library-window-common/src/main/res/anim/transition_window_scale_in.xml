<set xmlns:android="http://schemas.android.com/apk/res/android"
	 android:interpolator="@anim/ui_window_interpolator"
	 android:zAdjustment="bottom">

	<alpha
		android:duration="@integer/ui_config_anim_window_fade_in_duration"
		android:fromAlpha="0.5"
		android:toAlpha="1.0" />

	<scale
		android:duration="@integer/ui_config_anim_window_scale_in_duration"
		android:fromXScale="0.9"
		android:fromYScale="0.9"
		android:pivotX="50%"
		android:pivotY="50%"
		android:startOffset="@integer/ui_config_anim_window_scale_in_delay"
		android:toXScale="1.0"
		android:toYScale="1.0" />
</set>