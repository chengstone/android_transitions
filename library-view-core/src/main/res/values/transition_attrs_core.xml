<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Transition attributes. -->
    <declare-styleable name="Ui.Transition">
        <!-- Visibility to be applied to a view at the start of appearing transition. -->
        <attr name="transitionAppearVisibility">
            <enum name="visible" value="0x00000000"/>
            <enum name="invisible" value="0x00000004"/>
            <enum name="gone" value="0x00000008"/>
        </attr>
        <!-- Visibility to be applied to a view at the start of disappearing transition. -->
        <attr name="transitionDisappearVisibility">
            <enum name="visible" value="0x00000000"/>
            <enum name="invisible" value="0x00000004"/>
            <enum name="gone" value="0x00000008"/>
        </attr>
        <!-- Visibility to be applied to a view at the start of a transition's animation. -->
        <attr name="transitionStartVisibility">
            <enum name="visible" value="0x00000000"/>
            <enum name="invisible" value="0x00000004"/>
            <enum name="gone" value="0x00000008"/>
        </attr>
        <!-- Visibility to be applied to a view at the end of a transition's animation. -->
        <attr name="transitionEndVisibility">
            <enum name="visible" value="0x00000000"/>
            <enum name="invisible" value="0x00000004"/>
            <enum name="gone" value="0x00000008"/>
        </attr>
        <!-- Gravity of the center. -->
        <attr name="transitionCenterGravity">
            <!-- Use top coordinate of a transition object as vertical center origin. -->
            <flag name="top" value="0x30" />
            <!-- Use bottom coordinate of a transition object as vertical center origin. -->
            <flag name="bottom" value="0x50" />
            <!-- Use left coordinate of a transition object as horizontal center origin. -->
            <!--<flag name="left" value="0x03" />-->
            <!-- Use right coordinate of a transition object as horizontal center origin. -->
            <!--<flag name="right" value="0x05" />-->
            <!-- Use vertical center coordinate of a transition object as vertical center origin. -->
            <flag name="center_vertical" value="0x10" />
            <!-- Use horizontal center coordinate of a transition object as horizontal center origin. -->
            <flag name="center_horizontal" value="0x01" />
            <!-- Use vertical and horizontal center coordinate of a transition object as center origin. -->
            <flag name="center" value="0x11" />
            <!-- Use beginning coordinate of a transition object as horizontal center origin. -->
            <flag name="start" value="0x00800003" />
            <!-- Use end coordinate of a transition object as horizontal center origin. -->
            <flag name="end" value="0x00800005" />
        </attr>
        <!-- Vertical offset for the center point of a transition. -->
        <attr name="transitionCenterVerticalOffset" format="dimension"/>
        <!-- Horizontal offset for the center point of a transition. -->
        <attr name="transitionCenterHorizontalOffset" format="dimension"/>
    </declare-styleable>
</resources>